<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".boottomNav.HomeFragment"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/Lmeal"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mealSearch"
                android:paddingLeft="10dp"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="Поиск"
                android:background="@drawable/radius"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/cleartext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/wd"/>
            <ImageView
                android:id="@+id/clickAdres"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/adres"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Ladress"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:orientation="horizontal">

            <EditText
                android:focusable="false"
                android:paddingLeft="10dp"
                android:id="@+id/adresSearch"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:hint="Выберите адрес доставки"
                android:background="@drawable/radius"
                android:textSize="20sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/adres"/>
            <ImageView
                android:id="@+id/clickSearch"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/search"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Result"
                android:layout_marginLeft="20dp"
                android:textSize="35sp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/blockMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#C4C4C4"
                android:layout_height="200dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Реклама"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="140dp"/>
            </LinearLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:background="#F2F2F2"
                app:tabSelectedTextColor="#FA4A0C"
                app:tabIndicatorColor="#FA4A0C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foods" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drinks" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snacks" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sauce" />
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                tools:layout_editor_absoluteX="-16dp" />
        </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>